<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE flowers [
        <!ELEMENT flowers (flower)*>
        <!ATTLIST flowers
                xmlns:xsi CDATA #REQUIRED
                xsi:noNamespaceSchemaLocation CDATA #REQUIRED>
        <!ELEMENT flower (name|origin|soil|visualParameters|growingTips|multiplying)*>
        <!ELEMENT name (#PCDATA)>
        <!ELEMENT origin (#PCDATA)>
        <!ELEMENT soil (#PCDATA)>
        <!ELEMENT visualParameters (halm|leaf|meanSize)*>
        <!ELEMENT halm (#PCDATA)>
        <!ELEMENT leaf (#PCDATA)>
        <!ELEMENT meanSize (#PCDATA)>
        <!ELEMENT growingTips (temperature|light|watering)*>
        <!ELEMENT temperature (#PCDATA)>
        <!ELEMENT light (#PCDATA)>
        <!ELEMENT watering (#PCDATA)>
        <!ELEMENT multiplying (#PCDATA)>
        ]>
<flowers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="DataBase.xsd">
    <flower>
        <name>Rose</name>
        <origin>Belarus</origin>
        <soil>Podzol</soil>
        <visualParameters>
            <halm>255;000;000;</halm>
            <leaf>000;255;000;</leaf>
            <meanSize>22.3</meanSize>
        </visualParameters>
        <growingTips>
            <temperature>26</temperature>
            <light>true</light>
            <watering>150</watering>
        </growingTips>
        <multiplying>byCutting</multiplying>
    </flower>
    <flower>
        <name>Daffodil</name>
        <origin>Netherlands</origin>
        <soil>Ground</soil>
        <visualParameters>
            <halm>255;000;120;</halm>
            <leaf>020;255;000;</leaf>
            <meanSize>17</meanSize>
        </visualParameters>
        <growingTips>
            <temperature>23</temperature>
            <light>true</light>
            <watering>230</watering>
        </growingTips>
        <multiplying>bySeed</multiplying>
    </flower>
    <flower>
        <name>Amarelis</name>
        <origin>Unknown</origin>
        <soil>SodPodzol</soil>
        <visualParameters>
            <halm>155;140;160;</halm>
            <leaf>120;255;000;</leaf>
            <meanSize>30.5</meanSize>
        </visualParameters>
        <growingTips>
            <temperature>28</temperature>
            <light>false</light>
            <watering>345</watering>
        </growingTips>
        <multiplying>byLeaves</multiplying>
    </flower>
</flowers>
